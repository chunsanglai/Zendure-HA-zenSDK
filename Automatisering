              %} {% set verschil = (zendure - p1 - correctie_export) * factor %}
              {% set beperkt = [ [verschil, 0] | max, cap ] | min %} {% set
              target = beperkt | int %} {% set huidig =
              states('sensor.zendure_2400_ac_ingesteld_oplaadvermogen') | int(0)
