              {% set factor = 1.00 %} {% set cap = 2400 %} {% set correctie = -2
              %} {% set p1 = states('sensor.p1_aansturing_api_v1') | float(0) %}
              {% set zendure =
              states('sensor.zendure_2400_ac_vermogen_aansturing') | float(0) %}
              {% set totaal = (p1 - zendure - correctie) * factor %} {% set
